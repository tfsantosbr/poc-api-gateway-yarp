{
  "ReverseProxy": {
    "Routes": {
      "OrdersRoute": {
        "ClusterId": "OrdersAPI",
        "Match": {
          "Path": "orders/v1/{**catch-all}"
        },
        "Transforms": [{ "PathPattern": "{**catch-all}" }]
      },
      "OrdersGetAllRoute": {
        "ClusterId": "OrdersAPI",
        "Match": {
          "Path": "orders/v1/orders"
        },
        "RateLimiterPolicy": "customRateLimitPolicy",
        "Transforms": [{ "PathPattern": "orders" }]
      },
      "OrdersCreateOrderRoute": {
        "ClusterId": "OrdersAPI",
        "Match": {
          "Path": "orders/v1/orders",
          "Methods": ["POST"]
        },
        "AuthorizationPolicy": "RequireManagerRolePolicy",
        "Transforms": [{ "PathPattern": "orders" }]
      },
      "ProductsRoute": {
        "ClusterId": "ProductsAPI",
        "Match": {
          "Path": "products/v1/{**catch-all}"
        },
        "Transforms": [{ "PathPattern": "{**catch-all}" }]
      },
      "ProductsGetAllRoute": {
        "ClusterId": "ProductsAPI",
        "Match": {
          "Path": "products/v1/products"
        },
        "RateLimiterPolicy": "customRateLimitPolicy",
        "Transforms": [{ "PathPattern": "products" }]
      }
    },
    "Clusters": {
      "OrdersAPI": {
        "Destinations": {
          "destination1": {
            "Address": "http://orders-api:8080"
          }
        }
      },
      "ProductsAPI": {
        "Destinations": {
          "destination1": {
            "Address": "http://products-api:8080"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
